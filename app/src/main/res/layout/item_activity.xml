<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/container_border_only"
    android:layout_marginBottom="10dp"
    android:padding="20dp">

    <TextView
        android:id="@+id/titleLbl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:text="Activity Title">

    </TextView>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/titleLbl"
        app:layout_constraintBottom_toTopOf="@id/descriptionLbl"
        android:id="@+id/dateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        android:padding="5dp"
        android:text="Date"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/titleLbl"
        android:id="@+id/descriptionLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:padding="5dp"
        android:text="Activity Description">

    </TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ic_delete"
        app:tint="@color/light_gray"
        android:src="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>